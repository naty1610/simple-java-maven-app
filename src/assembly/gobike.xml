<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>gobike</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
    <files>
      <file>
        <source>${project.basedir}/application-gobike.properties</source>
        <outputDirectory>/</outputDirectory>
        <destName>config.properties</destName>
      </file>
    </files>
    <dependencySets>
      <dependencySet>
        <!-- This will exclude any transitive dependencies from being included in your assembly -->
        <includes>
          <include>com.bike:bike</include>
        </includes>
        <useTransitiveDependencies>false</useTransitiveDependencies>
        <unpack>true</unpack>
      </dependencySet>
    </dependencySets>
</assembly>